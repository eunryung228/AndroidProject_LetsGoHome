<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF2E6"
    tools:context=".MainActivity">

    <TextView
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/maplestorybold"
        android:textSize="20dp"
        android:text="열차 조회" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFCFC"
        android:orientation="horizontal">

        <Button
            android:id="@+id/tglArrive"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:layout_margin="8dp"
            android:background="#FFD3B0"
            android:fontFamily="@font/maplestorylight"
            android:onClick="mOnClick"
            android:text="집 -> 본가"
            android:textSize="11dp" />

        <Button
            android:id="@+id/selectDate"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#FFD3B0"
            android:fontFamily="@font/maplestorylight"
            android:onClick="mOnClick"
            android:textSize="11dp"
            android:text="날짜 선택" />

        <TextView
            android:id="@+id/textDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:fontFamily="@font/maplestorylight"
            android:textSize="14dp"
            android:text="2019년 12월 11일">
        </TextView>

        <Button
            android:id="@+id/btnResult"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#FFD3B0"
            android:fontFamily="@font/maplestorylight"
            android:onClick="mOnClick"
            android:textSize="11dp"
            android:text="조회" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:background="#FFFCFC"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/vehicle"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="0.31"
            android:layout_margin="2dp"
            android:fontFamily="@font/maplestorylight"
            android:gravity="center"
            android:text="열차"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/depTime"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:layout_weight="0.23"
            android:fontFamily="@font/maplestorylight"
            android:gravity="center"
            android:text="출발"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/arrTime"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:layout_weight="0.23"
            android:gravity="center"
            android:fontFamily="@font/maplestorylight"
            android:text="도착"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/charge"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:layout_weight="0.23"
            android:gravity="center"
            android:fontFamily="@font/maplestorylight"
            android:text="금액"
            android:textSize="13dp" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.3dp"
        android:background="#BDBDBD" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFCFC"
        android:orientation="vertical">

        <ListView
            android:id="@+id/information"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_margin="8dp"
            android:choiceMode="singleChoice"
            android:orientation="vertical"/>
    </LinearLayout>



</LinearLayout>