<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF2E6"
    tools:context=".MainPage">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:fontFamily="@font/maplestorybold"
        android:text="렛츠고 홈"
        android:textSize="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFCFC"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/textHi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/maplestorylight"
            android:text="안녕하세요 ~~~~~님!"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="3dp"
                app:srcCompat="@drawable/parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_gravity="left"
                android:fontFamily="@font/maplestorylight"
                android:textSize="12dp"
                android:textColor="#000000"
                android:text="· 가족을 못 만난 지 어느덧 30일" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="4dp"
                android:fontFamily="@font/maplestorylight"
                android:textSize="12dp"
                android:textColor="#000000"
                android:text="· 다음 가족을 만날 날까지 30일"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="4dp"
                android:fontFamily="@font/maplestorylight"
                android:textSize="12dp"
                android:textColor="#000000"
                android:text="· 전화를 못 한 지 어느덧 60일"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFCFC"
            android:orientation="horizontal"
            android:padding="2dp">

            <ImageButton
                android:id="@+id/btnCal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="#FFFCFC"
                android:onClick="mOnClick"
                android:src="@drawable/cal" />

            <ImageButton
                android:id="@+id/btnKtx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="#FFFCFC"
                android:onClick="mOnClick"
                android:src="@drawable/ktx" />

            <ImageButton
                android:id="@+id/btnCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="#FFFCFC"
                android:onClick="mOnClick"
                android:src="@drawable/call" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFCFC"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:layout_marginTop="2dp"
                android:gravity="center_horizontal"
                android:fontFamily="@font/maplestorylight"
                android:textSize="12dp"
                android:text="캘린더" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_marginTop="2dp"
                android:gravity="center_horizontal"
                android:fontFamily="@font/maplestorylight"
                android:textSize="12dp"
                android:text="ktx 조회" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:layout_marginTop="2dp"
                android:gravity="center_horizontal"
                android:fontFamily="@font/maplestorylight"
                android:textSize="12dp"
                android:text="전화하기" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>